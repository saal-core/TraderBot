# =============================================================================
# TraderBot Environment Configuration Template
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# PostgreSQL Database Connection
# -----------------------------------------------------------------------------
DB_HOST=your-db-host
DB_NAME=AI-Trading-QNA
DB_USER=your-db-user
DB_PASSWORD=your-db-password
DB_PORT=5432
DB_SCHEMA=ai_trading

# Connection Pool Settings
POSTGRES_MIN_CONNECTIONS=2
POSTGRES_MAX_CONNECTIONS=30

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_TITLE=Text-to-SQL Chatbot
APP_ICON=ðŸ’¬
MAX_CHAT_HISTORY_DISPLAY=20
CHAT_HISTORY_CONTEXT_SIZE=10

# Query Settings
ENABLE_QUERY_CACHING=False
MAX_RESULT_ROWS=1000
QUERY_TIMEOUT=100

# Security
ALLOW_ONLY_SELECT=True
ENABLE_SQL_INJECTION_PROTECTION=True

# Logging
LOG_LEVEL=INFO
MAX_UI_MESSAGES_TO_DISPLAY=20

# -----------------------------------------------------------------------------
# LLM Provider Selection
# Options: qwen, openai, ollama, huggingface
# -----------------------------------------------------------------------------
LLM_PROVIDER=qwen

# -----------------------------------------------------------------------------
# Qwen Configuration (H100 via OpenAI-compatible API)
# -----------------------------------------------------------------------------
QWEN_BASE_URL=http://192.168.71.72:8080/v1
QWEN_API_KEY=123
QWEN_MODEL=Qwen3-30B-A3B

# -----------------------------------------------------------------------------
# OpenAI Configuration
# -----------------------------------------------------------------------------
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o
OPENAI_TEMPERATURE_ROUTING=0.1
OPENAI_TEMPERATURE_SQL=0.0

# -----------------------------------------------------------------------------
# Ollama Configuration (local LLM)
# -----------------------------------------------------------------------------
OLLAMA_MODEL=qwen3-coder:30b
OLLAMA_API_URL=http://localhost:11434
OLLAMA_TEMPERATURE_ROUTING=0.1
OLLAMA_TEMPERATURE_SQL=0.0
OLLAMA_TEMPERATURE_GREETING=0.7
OLLAMA_TEMPERATURE_COMPARISON=0.5

# -----------------------------------------------------------------------------
# Anthropic Configuration
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=your-anthropic-api-key

# -----------------------------------------------------------------------------
# External API Services
# -----------------------------------------------------------------------------

# Perplexity API (for web search)
PERPLEXITY_API_KEY=your-perplexity-api-key
PERPLEXITY_API_URL=https://api.perplexity.ai/chat/completions

# Financial Modeling Prep (for market data)
FMP_API_KEY=your-fmp-api-key
FMP_API_URL=https://financialmodelingprep.com/api/v3

# -----------------------------------------------------------------------------
# Vanna Configuration
# -----------------------------------------------------------------------------
VANNA_PERSIST_DIR=./vanna_chromadb_store

# -----------------------------------------------------------------------------
# GPU Configuration (if applicable)
# -----------------------------------------------------------------------------
CUDA_VISIBLE_DEVICES=0
